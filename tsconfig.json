{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],

    "allowJs": true,
    "paths": {
      "typeorm": ["node_modules/typeorm/typeorm-model-shim"]
    },
    
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
